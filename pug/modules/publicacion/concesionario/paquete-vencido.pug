extends /pug/layout/all/layout.pug

block title
    - var headerTitle = "Paquete vencido"

block content
    +row()
        +col-full()
            p.text Estimado&nbsp;
                strong Mitsui
            p.pb10.margin0
            p.text Le informamos que su&nbsp;
                strong Paquete !{echo("namePackage")} ha finalizado.

    +row()
        +col-full()
            h2.subtitle.fw-bold Datos del paquete

    +row()
        +col-full()
            +col-one-third()
                strong.text Paquete:
            +col-two-thirds()
                p.text.margin0 !{echo("namePackage")}

    +row()
        +col-full()
            +col-one-third()
                strong.text Duración:
            +col-two-thirds()
                p.text.margin0 {{=duration}}

    +row()
        +col-full()
            +col-one-third()
                strong.text Fichas Modelos 0KM:
            +col-two-thirds()
                p.text.margin0 {{=sheetModel}}

    +row()
        +col-full()
            +col-one-third()
                strong.text Avisos Impresos:
            +col-two-thirds()
                p.text.margin0 {{=printedNews}}

    +row()
        +col-full()
            +col-one-third()
                strong.text Tienda virtual:
            +col-two-thirds()
                p.text.margin0 {{=onlineShop}}

    +row()
        +col-full()
            +col-one-third()
                strong.text Adicionales:
            +col-two-thirds()
                +for("var i = 0; i< additional.length; i++")
                    span.text.margin0 {{=additional[i]}},&nbsp;

    +row()
        +col-full()
            +col-one-third()
                strong.text Fecha de activación:
            +col-two-thirds()
                p.text.margin0 {{=activationDate}}

    +row()
        +col-full()
            +col-one-third()
                strong.text Fecha de caducidad:
            +col-two-thirds()
                p.text.margin0 {{=expirationDate}}

    +row()
        +col-full()
            h2.subtitle.fw-bold Estadísticas finales

    +row()
        +col-full()
            +col-one-third()
                strong.text Tiempo Publicado:
            +col-two-thirds()
                p.text.margin0 {{=publishedDays}}

    +row()
        +col-full()
            +col-one-third()
                strong.text Lo han visto:
            +col-two-thirds()
                p.text.margin0 {{=viewNumber}} personas

    +row()
        +col-full()
            +col-one-third()
                strong.text Contactos:
            +col-two-thirds()
                p.text.margin0 {{=contactNumber}}

    +row()
        +col-full()
            .pt20
            +btn("Renovar paquete")(href="http://neoauto.com")
            .pb20
            .pb20
